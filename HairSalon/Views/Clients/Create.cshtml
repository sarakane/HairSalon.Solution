@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Add a new client</h1>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.ClientName, "Name")
  @Html.TextBoxFor(model => model.ClientName, null, new {required="required"})

  @Html.LabelFor(model => model.ClientPhoneNumber, "Phone number (000-000-0000)")
  @Html.TextBoxFor(model => model.ClientPhoneNumber, null, new {type="tel", pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}", required="required"})

  @Html.Hidden("StylistId", ViewBag.StylistId, null)
  <input type="submit" value="Add new client" class="btn btn-primary"/>
}

<p>@Html.ActionLink("Back to stylists", "Index", "Stylists")</p>