@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<h1>Stylists</h1>
@if (@Model.Count == 0)
{
  <h3>You don't have any stylists.</h3>
} 
<ul>
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId }, new {@class = "text-info"})</li>
}
</ul>

<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>